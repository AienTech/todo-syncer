generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider   = "node node_modules/prisma-nestjs-graphql"
  output     = "../src/@generated"
  emitSingle = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id            Int     @id @default(autoincrement())
  title         String
  description   String?
  status        Status
  list          List    @relation(fields: [listId], references: [id])
  listId        Int
  integrationId String? // To track todos synced from third-party services
}

model List {
  id    Int    @id @default(autoincrement())
  title String
  todos Todo[]
}

enum Status {
  TO_DO
  ON_GOING
  DONE
}
